<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_personal_setup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подбор персональной тренировки"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"/>

    <!-- Поле для ввода веса -->
    <EditText
        android:id="@+id/et_weight"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginBottom="16dp"
        android:hint="Введите ваш вес (кг)"
        android:inputType="numberDecimal" />

    <!-- Поле для ввода роста -->
    <EditText
        android:id="@+id/et_height"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginBottom="16dp"
        android:hint="Введите ваш рост (м)"
        android:inputType="numberDecimal" />

    <!-- Поле для ввода возраста -->
    <EditText
        android:id="@+id/et_age"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:hint="Введите ваш возраст"
        android:inputType="number" />

    <!-- Кнопка "Подобрать тренировку" -->
    <Button
        android:id="@+id/btn_select_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подобрать тренировку"
        android:layout_marginTop="24dp"/>

</LinearLayout>
