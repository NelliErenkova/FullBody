<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_back_arrow_weight_loss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="32dp"
        android:text="← Назад"
        android:textColor="#0072E6"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_weight_loss_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Похудение"
        android:textColor="#0070DF"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="411dp"
        android:layout_height="574dp"
        app:srcCompat="@drawable/poxudenie" />

    <Button
        android:id="@+id/btn_start_weight_loss_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#0072E6"
        android:backgroundTintMode="src_in"
        android:text="Приступить к тренировке" />
</LinearLayout>
